<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.artistapp"
    android:versionCode="1"
    android:versionName="1.0">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/> 
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
     <uses-permission android:name="android.permission.SET_WALLPAPER" />
     <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.artistapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.artistapp.SongsActivity"
            android:label="@string/title_activity_songs" >
        </activity>
        <activity
            android:name="com.example.artistapp.VideosActivity"
            android:label="@string/title_activity_video" >
        </activity>
        <activity
            android:name="com.example.artistapp.WallpaperActivity"
            android:label="@string/title_activity_wallpaper" >
        </activity>
        <activity
            android:name="com.example.artistapp.MailingListActivity"
            android:label="@string/title_activity_mailing_list" >
        </activity>
    </application>

</manifest>
